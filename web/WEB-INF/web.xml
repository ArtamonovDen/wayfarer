<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.addServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>close</servlet-name>
        <servlet-class>app.servlets.closeSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>close</servlet-name>
        <url-pattern>/close</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>app.servlets.indexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>changeStatus</servlet-name>
        <servlet-class>app.servlets.changeStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeStatus</servlet-name>
        <url-pattern>/changeStatus</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>app.servlets.removeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>


</web-app>